/* pages/follow/details.wxss */
.My-zo{
  box-sizing: border-box;
  padding: 24rpx;
}
.My-git{
  color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1)
}
.My-git .My-flex{
   display:flex;
  align-items: center;
}
.My-git .My-image{
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #4A90E2;
  box-sizing: border-box;
  border-radius: 50%;
  padding: 2px;
}
.My-git .My-image image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.My-git .My-flex .My-text{
  font-size: 28rpx;
  padding-left: 26rpx;
}
.My-git .My-geng{
  box-sizing: border-box;
  padding: 30rpx; 
}
.My-git .My-geng image{
  width: 16rpx;
  height: 32rpx;
  display: inherit;
}