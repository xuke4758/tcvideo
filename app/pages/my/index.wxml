<!-- 头部 -->
<view class='box'>
  <view class='top'>
    <view class='follow'>
      <!-- 头像 -->
      <view class='follow-pai' wx:for="{{arrAll}}">
        <view class='follow-image'>
          <image src='{{item.url}}' mode="{{aspectFit}}"></image>
        </view>
        <view class='follow-text'>
          <text>{{item.name}}</text>
        </view>
      </view>
      <!-- 更多 -->
      <view class='follow-gengduo' bindtap='geng_rou'>
        <image src='../../assets/More.png'></image>
      </view>
    </view>
    <view class='grad'>
      <image src='../../assets/zhezhao.png' class='image1'></image>
    </view>
  </view>
  <view class='video'>
    <view class='video-object'>
      <view class='video-image'>
      <!-- 头像 -->
        <image src='../../assets/touxiang4.jpg' mode="{{aspectFit}}"></image>
      </view>
      <view class="video-text">
        <view class='video-text-1'>@郭小姐啊</view>
        <view class='video-text-2'>1小时前</view>
      </view>
