  /* 头部头像 */
  .box{
    background: #000;
    width: 100%;
    /* height: 1110rpx; */
    box-sizing: border-box;
    padding:0 24rpx;
  }
  .box .follow-pai{
    width: 95%;
  }
  .box .follow{
    display: flex;
    justify-content:space-between;
  }
  .follow .follow-gengduo{
    width: 16rpx;
    z-index: 2;
  }
  .follow .follow-gengduo image{
    width: 16rpx;
    height: 32rpx;
    margin-top:30rpx;
  }
  .box .follow .follow-image{
    width: 80rpx;
    height: 80rpx;
    border: 2rpx solid #4A90E2;
    border-radius: 50%;
    box-sizing: border-box;
    padding: 2rpx;
  }
  .box .follow .follow-image image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  .box .follow .follow-text{
    width: 80rpx;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis
  }
  .top{
    position: relative;
    padding: 19rpx 0;
    border-bottom:1px solid rgba(255, 255, 255, 0.1); 
  }
  .grad{
    width:140rpx;
    height: 140rpx;
    /* background: linear-gradient(to right, rgba(255,255,255,0.1) , #000); */
    position: absolute;
    top: 0;
    right: 0;
  }
  .grad image{
    width: 140rpx;
    height: 140rpx;
  }
