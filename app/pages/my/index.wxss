/* 头像 */
  .video{
    width: 100%;
    border-bottom:1px solid rgba(255, 255, 255, 0.1); 
  }
  .video .video-object{
    padding: 15rpx 0;
    box-sizing: border-box;
    display: flex;
  }
  .video .video-object .video-image{
    width: 54rpx;
    height: 54rpx;
    border-radius: 50%;
    border: 2rpx solid rgba(255, 255, 255, 0.5);
  }
  .video .video-object .video-image image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  .video .video-text{
    padding-left: 20rpx;
    color: #fff;
  }
  .video .video-text .video-text-1{
    font-size: 24rpx;
    color: #fff;
  }
  .video .video-text .video-text-2{
