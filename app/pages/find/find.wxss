.find{
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.find .find-input{
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  box-sizing: border-box;
  padding: 13rpx 0;
}
.find .find-input input{
  font-size: 28rpx;
  width: 100%;
  margin-left: 31rpx;
}
.find-item{
  width: 100%;
}
.find .find-input image{
  width:45rpx;
  height: 45rpx;
}
.find-swiper{
  width: 100%;
  margin-top: 22rpx;
}
.find-swiper swiper{
  width: 100%;
  height: 316rpx;
}
.find-swiper swiper image{
  width: 100%;
  height: 316rpx;
}

/* 分类 */
.class-item{
  color: #fff;
}
.class-item .class-top{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 18rpx 24rpx;
}
.class-item .class-left image{
  width: 52rpx;
  height: 52rpx;
  margin-right: 24rpx;
}
.class-item .class-right image{
  width: 16rpx;
  height: 32rpx;
  margin-left: 12rpx;
}
.class-item .class-left,.class-right{
  display: flex;
  align-items: center;
}


