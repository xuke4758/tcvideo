page{
  width:100%;
  height:100%;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.container{
  flex-direction: row;
  height:100%;
}
.left{
  display: inline-block;
  width:100px;
  height:80%;
}
.left scroll-view{
  height:100%;
}
.left view{
  padding:10px;
  text-align: center;
  background-color:#0f0;
  margin-bottom:10px;
  color:#fff;
}
.right{
  display: inline-block;
  flex:1;
  width: 275px;
  height:80%;
}
.right scroll-view{
  height:100%;
}
.right view{
  height:150px;
  background-color:#f00;
  color:#fff;
  margin-bottom:10px;
}