/* weizhi */
.age-image image{
  width: 22rpx;
  height: 24rpx;
}
.age-image text{
  color: #fff;
  font-size: 26rpx;
  padding-left: 24rpx;
}
.age-image-1 image{
  width: 16rpx;
  height: 32rpx;
}
.age-image-1{
  display: flex;
  justify-content: space-between; 
}
.age-image-1 radio{
  transform:scale(0.5);
}
.age-address{
  display: flex;
  justify-content: space-between;
  padding:16rpx 0;
}
.age-dz{
  color: #808080;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.age-dz view{
  max-width: 220rpx;
  padding: 5rpx 14rpx;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
  border: 2rpx solid #808080;
}
.view .btn{
  width: 100%;
  background:#4A90E2 ; 
  font-size:30rpx;
  color: #fff;
}
.view .btn-b{
  width: 100%;
  position: absolute;
  bottom:28rpx;
  left: 0%;
  padding: 0 24rpx;
  box-sizing: border-box;
}