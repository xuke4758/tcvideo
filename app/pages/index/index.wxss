/* pages/index/index.wxss */
@import '/pages/templates/flex/flex2.wxss';
.bor{
  width: 100%;
  display: flex;
}
.left{
  width: 90%;
}
.scroll{
  width: 100%;
  height: 72rpx;
  border: 1px solid #000;
  box-sizing: border-box;
  text-align: center;
  background: #000;
  white-space: nowrap;
}
.asst-list{
  width: 100%;
  box-sizing: border-box;
  background: #000;
  white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll .abc{
  line-height: 72rpx;
  font-size: 32rpx;
  margin: 0 20rpx;
  display:inline-block;
  color: rgba(255, 255, 255, 0.5)
}
.scroll .add{
  color: #fff;
  font-size: 36rpx;
}
.asst-li{
  padding: 6rpx 9rpx;
  opacity: .3;
}
.asst-li:first-child{
  padding-left: 0;
}
.asst-li.active{
  opacity: .6;
}
.search{
  width: 10%;
  height: 72rpx;
  position: relative;
  background: #000;
}
.search image{
  width:38rpx;
  height:38rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.locabox{
  height: 46rpx;
  margin: 0 24rpx 0;
  padding: 0 0 3rpx;
  border-bottom: 1px solid rgba(255,255,255,0.20);
}
.autodw{
  width: 22rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.qhimg{
  width: 12rpx;
  height: 20rpx;
  margin-left: 8rpx;
}